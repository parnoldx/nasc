<schemalist>
	<schema id="com.github.parnold-x.nasc" path="/com/github/parnold-x/nasc/" gettext-domain="nasc">

		<key name="show-tutorial" type="b">
			<default>true</default>
			<summary>Show a Tutorial at startup</summary>
			<description>
				If the user starts the first time a tutorial is shown
			</description>
		</key>

		<key name="advanced-mode" type="b">
			<default>false</default>
			<summary>If true advanced functions are shown in the help</summary>
			<description>
				If you are a true math geek you need this set to true
			</description>
		</key>

		<key name="window-width" type="i">
			<default>850</default>
			<summary>The user's last window width</summary>
			<description>
				The user's last window width
			</description>
		</key>

		<key name="window-height" type="i">
			<default>800</default>
			<summary>The user's last window height</summary>
			<description>
				The user's last window height
			</description>
		</key>

		<key name="pane-position" type="i">
			<default>445</default>
			<summary>The user's last pane position</summary>
			<description>
				The user's last pane position
			</description>
		</key>

		<key name="opening-x" type="i">
		  <default>-1</default>
		  <summary>Most recent x position of nasc</summary>
		  <description>Most recent x position of nasc</description>
		</key>

		<key name="opening-y" type="i">
		  <default>-1</default>
		  <summary>Most recent y position of nasc</summary>
		  <description>Most recent y position of nasc</description>
		</key>

		<key name="open-sheet" type="i">
			<default>0</default>
			<summary>The open sheet</summary>
			<description>
				The open sheet
			</description>
		</key>

		<key name="dark-theme" type="b">
			<default>false</default>
			<summary>Dark Theme</summary>
			<description>If the user toggles the dark theme this is true</description>
		</key>
	</schema>
</schemalist>
